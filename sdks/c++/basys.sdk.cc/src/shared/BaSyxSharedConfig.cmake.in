if (CMAKE_VERSION VERSION_LESS 3.13.0)
    message(FATAL_ERROR "@BASYX_SHARED_LIBRARY_NAME@ needs at least CMake version 3.13.0")
endif()

get_filename_component(_basyx_shared_rootdir ${CMAKE_CURRENT_LIST_DIR}/../../../ ABSOLUTE)

set(BASYX_SHARED_VERSION_STRING "@PROJECT_VERSION@")

set(BASYX_SHARED_INSTALL_PREFIX @CMAKE_INSTALL_PREFIX@)
set(BASYX_SHARED_INSTALL_LIBDIR ${BASYX_SHARED_INSTALL_PREFIX}/@CMAKE_INSTALL_LIBDIR@)
set(BASYX_SHARED_INSTALL_INCLUDE_DIR ${BASYX_SHARED_INSTALL_PREFIX}/include)
set(BASYX_SHARED_INSTALL_INCLUDE_DIR_BASYX_SHARED ${BASYX_SHARED_INSTALL_PREFIX}/include/@PROJECT_SHORTNAME@)
set(BASYX_SHARED_INCLUDE_DIRS   ${_basyx_shared_rootdir}${BASYX_SHARED_INSTALL_INCLUDE_DIR} ${_basyx_shared_rootdir}${BASYX_SHARED_INSTALL_INCLUDE_DIR_BASYX_SHARED})
set(BASYX_SHARED_LIBRARY_DIR    ${_basyx_shared_rootdir}${BASYX_SHARED_INSTALL_LIBDIR})
set(BASYX_SHARED_LIBRARIES      -L${BASYX_SHARED_LIBRARY_DIR} -l@BASYX_SHARED_LIBRARY_NAME@)

list(APPEND BASYX_SHARED_LIBRARIES)

mark_as_advanced( BASYX_SHARED_INCLUDE_DIRS BASYX_SHARED_LIBRARIES )
