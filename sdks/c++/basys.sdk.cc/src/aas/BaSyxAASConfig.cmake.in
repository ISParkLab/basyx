if (CMAKE_VERSION VERSION_LESS 3.13.0)
    message(FATAL_ERROR "@BASYX_AAS_LIBRARY_NAME@ needs at least CMake version 3.13.0")
endif()

get_filename_component(_basyx_aas_rootdir ${CMAKE_CURRENT_LIST_DIR}/../../../ ABSOLUTE)

set(BASYX_AAS_VERSION_STRING "@PROJECT_VERSION@")

set(BASYX_AAS_INSTALL_PREFIX @CMAKE_INSTALL_PREFIX@)
set(BASYX_AAS_INSTALL_LIBDIR ${BASYX_AAS_INSTALL_PREFIX}/@CMAKE_INSTALL_LIBDIR@)
set(BASYX_AAS_INSTALL_INCLUDE_DIR ${BASYX_AAS_INSTALL_PREFIX}/include)
set(BASYX_AAS_INSTALL_INCLUDE_DIR_BASYX_AAS ${BASYX_AAS_INSTALL_PREFIX}/include/@PROJECT_SHORTNAME@)
set(BASYX_AAS_INCLUDE_DIRS   ${_basyx_aas_rootdir}${BASYX_AAS_INSTALL_INCLUDE_DIR} ${_basyx_aas_rootdir}${BASYX_AAS_INSTALL_INCLUDE_DIR_BASYX_AAS})
set(BASYX_AAS_LIBRARY_DIR    ${_basyx_aas_rootdir}${BASYX_AAS_INSTALL_LIBDIR})
set(BASYX_AAS_LIBRARIES      -L${BASYX_AAS_LIBRARY_DIR} -l@BASYX_AAS_LIBRARY_NAME@)

list(APPEND BASYX_AAS_LIBRARIES)

mark_as_advanced( BASYX_AAS_INCLUDE_DIRS BASYX_AAS_LIBRARIES )
